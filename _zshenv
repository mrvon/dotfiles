# disable XON/XOFF, for i-search
[[ $- == *i* ]] && stty -ixon

# Path
DOTFILES_SCRIPT=~/dotfiles/script
export PATH=$DOTFILES_SCRIPT:$PATH

# Golang
export GOROOT=$HOME/go_build
export PATH=$GOROOT/bin:$PATH
export GOPATH=~/go
export PATH=$GOPATH/bin:$PATH
export GO111MODULE=on

# Rust
export PATH=$HOME/.cargo/bin:$PATH

# NVM
export NVM_DIR=$HOME/.nvm

# RLWRAP
export RLWRAP_HOME=$HOME/.local/share/rlwrap

# FZF
export FZF_DEFAULT_COMMAND="fd --exclude={.git,node_modules,build,tmp} --type f"

# Luarocks
export PATH=$HOME/.luarocks/bin:$PATH
