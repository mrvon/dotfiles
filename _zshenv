# disable XON/XOFF, for i-search
[[ $- == *i* ]] && stty -ixon

# Path
DOTFILES_SCRIPT=~/dotfiles/script
export PATH=$DOTFILES_SCRIPT:$PATH

# Golang
case `uname` in
    Linux)
        export GOROOT_BOOTSTRAP=/usr/local/go-1.6
    ;;
    Darwin)
        export GOROOT_BOOTSTRAP=/usr/local/go
    ;;
esac
export GOROOT=$HOME/go_build
export GOPATH=~/go
export PATH=$GOROOT/bin:$PATH
export PATH=$GOPATH/bin:$PATH
export GO111MODULE=on

# Rust
export PATH=$HOME/.cargo/bin:$PATH

# NVM
export NVM_DIR=$HOME/.nvm

# RLWRAP
export RLWRAP_HOME=$HOME/.local/share/rlwrap
