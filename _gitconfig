[user]
    name = dennis
    email = mrvon@qq.com
[core]
    editor = nvim -f
	pager = less -x1,5
[diff]
    tool = nvimdiff
	submodule = log
[difftool]
    prompt = false
[difftool "vimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[difftool "nvimdiff"]
    cmd = nvim -f -d -c 'wincmd l' -c 'cd "$GIT_PREFIX"' "$LOCAL" "$REMOTE"
[merge]
    tool = nvimdiff
[mergetool]
    prompt = false
	keepBackup = false
	trustExitCode = true
[mergetool "vimdiff"]
    cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
	trustExitCode = true
[mergetool "nvimdiff"]
    layout = "LOCAL,BASE,REMOTE / MERGED"
[push]
	recurseSubmodules = check
	autoSetupRemote = true
[url "https://"]
	insteadOf = git://
[gc]
	auto = 0
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[url "git@gitlab.alibaba-inc.com:"]
	insteadOf = https://gitlab.alibaba-inc.com/
[rebase]
	instructionFormat = [%an] %s
[advice]
	skippedCherryPicks = false
