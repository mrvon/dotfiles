[diff]
    tool = vimdiff
	submodule = log
[difftool]
    prompt = false
[difftool "vimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
[mergetool "vimdiff"]
    cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE" -c '2wincmd w'
[push]
	recurseSubmodules = check
